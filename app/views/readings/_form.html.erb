    <%= form.hidden_field :report_id %>
  <% end %>

  <div class="field">
    <%= form.label :number %>
    <%= form.number_field :number %>
  </div>

  <div class="field">
    <%= form.label :readings %>
    <%= form.text_field :readings %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
