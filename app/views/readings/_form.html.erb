      <ul>
      <% reading.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <% if reading.report_id.nil? %>
    <div class="field">
      <%= form.label :report_id %>
      <%= form.text_field :report_id %>
    </div>
